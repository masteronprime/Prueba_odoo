<odoo>
    <record id="view_product_template_form_inherited" model="ir.ui.view">
        <field name="name">product.template.form.inherit.orders</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_orders" type="object" class="oe_stat_button" icon="fa-bar-chart">
                    <div class="o_stat_info">
                        <span class="o_stat_value">
                            <field name="count_orders"/>
                        </span>
                        <span class="o_stat_text">
                                        Ventas
                        </span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>
